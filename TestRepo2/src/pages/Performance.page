	<style>
		
		.pbLabel {
			font-weight: bold;
			font-size: 1.2em;
			margin-left: 12px;
		}
		
		.pbSubExtra {
			display: none !important;
		}
		
		.pbSubsection {
			margin-top: 12px !important;
		}
		
		.resultText {
			margin: 0px 15px;
		}
		
		.chartDiv {
			margin: 10px 0px 10px 12px;
			border: 1px solid black;
			background-color: white;
			width: 700px;
		}
		
		.chartDiv tspan{
			font-size: 1.2em !important;
		}
	
		.chartTitle {
			font-weight: bold;
			font-size: 12px;
			text-align: center;
			padding: 5px 0px 5px 0px;
			background-color: #CCC;
		}
		
		.vf-surface {
			width: 700px;
			position: relative;
			left: -10px;
		}
		
		.detailPage .bPageBlock, .editPage .bPageBlock {
			border-top-width: 0px;
		}
		
	</style>
	
	<script>
	
		var j$ = jQuery.noConflict();
		
		var initialized = false;
		
		window.onload = function(){
			init();
		};
		
		function init(){
			if(initialized == false){
				var labels = j$('text').filter(function(){ return j$(this).css('font-size').indexOf('18') > -1 });
				if(labels.length == 0){
					setTimeout("init()", 100);
				} else {
					initialized = true;
					adjustAxisLabelCSS();
				}
			}
		}
		
		function adjustAxisLabelCSS(){
			var labels = j$('text').filter(function(){ return j$(this).css('font-size').indexOf('18') > -1 });
			j$(labels).css('font-size', '12px');
		}
		
	</script>
					
	<apex:form >
	
		<apex:actionFunction name="dateChanged"
							 action="{!dateChanged}"
							 rerender="messagePanel, filterPanel, resultPanel, chartPanel"
							 status="filterChangeStatus"
							 oncomplete="adjustAxisLabelCSS();"/>
		<apex:actionFunction name="levelChanged"
							 action="{!levelChanged}"
							 rerender="messagePanel, filterPanel, resultPanel, chartPanel"
							 status="filterChangeStatus"
							 oncomplete="adjustAxisLabelCSS();"/>
