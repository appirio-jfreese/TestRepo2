						<apex:image value="/img/loading.gif"
									style="padding: 3px 0px 0px 3px;"/>
				</apex:facet>
			</apex:actionStatus>
				
			<apex:outputPanel id="chartPanel">				
				<div class="chartDiv">
					<div class="chartTitle">
						{!chartTitle}
					</div>
					<br/>
					<apex:chart data="{!dataToUse}"
								height="{!chartHeight}"
								width="700">
						<apex:axis type="Numeric"
								   position="bottom"
								   fields="dispValue"
								   title="% Completed"
								   minimum="0"
								   maximum="100"
								   steps="3"
								   grid="true">
							<apex:chartLabel font="9px Helvetica, sans-serif"/>
						</apex:axis>
						<apex:axis type="Category"
								   position="left"
								   fields="name"
								   title="{!leftAxisLabel}">
							<apex:chartLabel font="9px Helvetica, sans-serif"/>
						</apex:axis>
						<apex:barSeries axis="bottom"
										orientation="horizontal"
										yfield="name"
										xfield="dispValue">
							<apex:chartTips height="50"
											width="120"
											labelField="fullName"
											valueField="tipValue"/>
						</apex:barSeries>
					</apex:chart>
				</div>
			</apex:outputPanel>
			
		</apex:pageBlock>
		
	</apex:form>

</apex:page>